<VirtualHost *:80>
    ServerName <SERVER_NAME>
    <SERVER_ALIAS>
    ServerAdmin <SERVER_ADMIN>

    DocumentRoot <DOCUMENT_ROOT>/<DOMAIN_NAME>/<SITE_DIRECTORY>

    # Available loglevels: trace8, ..., trace1, debug, info, notice, warn,
    # error, crit, alert, emerg.
    # It is also possible to configure the loglevel for particular
    # modules, e.g.
    #LogLevel info ssl:warn

    ErrorLog ${APACHE_LOG_DIR}/<DOMAIN_NAME>/<SITE_DIRECTORY>/error.log
    CustomLog ${APACHE_LOG_DIR}/<DOMAIN_NAME>/<SITE_DIRECTORY>/access.log combined
</VirtualHost>
